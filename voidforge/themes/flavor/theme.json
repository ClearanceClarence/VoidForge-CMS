{
    "name": "Flavor",
    "version": "2.0.0",
    "description": "A premium, modern theme with elegant typography and stunning visuals",
    "author": "VoidForge",
    "author_url": "https://voidforge.dev",
    "license": "MIT",
    "requires": "0.2.4",
    "tags": ["premium", "modern", "blog", "portfolio", "business", "blocks"],
    "settings": {
        "accent_color": {
            "label": "Accent Color",
            "type": "color",
            "default": "#6366f1"
        },
        "content_width": {
            "label": "Content Width",
            "type": "select",
            "options": {
                "narrow": "Narrow (720px)",
                "default": "Default (860px)",
                "wide": "Wide (1080px)"
            },
            "default": "default"
        },
        "show_entry_title": {
            "label": "Show Entry Title",
            "type": "checkbox",
            "default": true
        },
        "show_entry_meta": {
            "label": "Show Entry Meta",
            "type": "checkbox",
            "default": true
        },
        "show_author": {
            "label": "Show Author",
            "type": "checkbox",
            "default": true
        },
        "show_date": {
            "label": "Show Date",
            "type": "checkbox",
            "default": true
        }
    }
}
